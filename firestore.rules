rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles: Only the user can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Games: Public read/write for development (Simplifies seeding data)
    // In production, you might want to restrict 'write' to admins or authorized users
    match /games/{document=**} {
      allow read, write: if true;
    }
    
    // Reviews: Public read/write for development
    match /reviews/{document=**} {
      allow read, write: if true;
    }
  }
}