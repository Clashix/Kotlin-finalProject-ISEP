rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      // Allow users to read and write ONLY their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Games collection (global - visible to all authenticated users)
    match /games/{gameId} {
      // Anyone authenticated can read games
      allow read: if request.auth != null;
      
      // Anyone authenticated can create a game (app checks if user is EDITOR)
      allow create: if request.auth != null;
      
      // Allow updates by:
      // 1. The editor who created the game (can edit all fields)
      // 2. Any authenticated user (for updating review counts when adding reviews)
      allow update: if request.auth != null;
      
      // Only the editor who created the game can delete it
      allow delete: if request.auth != null && 
        resource.data.editorId == request.auth.uid;
      
      // Reviews subcollection for each game
      match /reviews/{reviewId} {
        // Anyone authenticated can read reviews
        allow read: if request.auth != null;
        
        // Users can only create reviews with their own userId
        allow create: if request.auth != null && 
          request.resource.data.userId == request.auth.uid;
        
        // Users can only update/delete their own reviews
        allow update, delete: if request.auth != null && 
          resource.data.userId == request.auth.uid;
      }
    }
  }
}
